{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "backend/server.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/reading",
            "dest": "backend/server.py"
        },
        {
            "src": "/api/season",
            "dest": "backend/server.py"
        },
        {
            "src": "/api/ranges",
            "dest": "backend/server.py"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ]
}